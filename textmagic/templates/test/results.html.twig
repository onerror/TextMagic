{% extends 'base.html.twig' %}

{% block title %}Результаты теста{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    <h1>Результаты теста {{ test.title }}</h1>
    <h2>Вопросы, на которые вы ответили правильно: ✅</h2>

    <ul>
    {% for question in right_questions %}
        <li>{{ question.title }}</li>
    {% endfor %}
    </ul>

    <h2>Вопросы, на которые вы ответили неправильно: ❌</h2>

    <ul>
    {% for question in wrong_questions %}
        <li>{{ question.title }}</li>
    {% endfor %}
    </ul>

    <h3><a href="{{ path('app_test', {'id': test.id}) }}">Пройти еще раз</a></h3>
    <h3><a href="{{ path('app_index') }}">К списку тестов</a></h3>

</div>
{% endblock %}